<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <TextView
        android:id="@+id/floorsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Floors: "
        android:textSize="30sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/floorsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/floorsLabel"
        app:layout_constraintTop_toTopOf="@+id/floorsLabel" />

    <TextView
        android:id="@+id/activityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity: "
        android:textSize="30sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/floorsLabel" />

    <TextView
        android:id="@+id/activityValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STILL"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/floorsLabel"
        app:layout_constraintTop_toTopOf="@+id/activityLabel" />

    <TextView
        android:id="@+id/altitudeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altitude: "
        android:textSize="30sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityLabel" />

    <TextView
        android:id="@+id/altitudeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 m"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/floorsLabel"
        app:layout_constraintTop_toTopOf="@+id/altitudeLabel" />

    <TextView
        android:id="@+id/maxAltLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max alt dif: \n"
        android:textSize="30sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/altitudeLabel" />

    <TextView
        android:id="@+id/maxAltValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 m"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/floorsLabel"
        app:layout_constraintTop_toTopOf="@+id/maxAltLabel" />

    <TextView
        android:id="@+id/atmPressureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atm pressure: \n"
        android:textSize="30sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maxAltLabel" />

    <TextView
        android:id="@+id/atmPressureValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 hPa"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/floorsLabel"
        app:layout_constraintTop_toTopOf="@+id/atmPressureLabel" />

    <TextView
        android:id="@+id/notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 hecto pascal = 1 milibar"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atmPressureLabel" />
</androidx.constraintlayout.widget.ConstraintLayout>